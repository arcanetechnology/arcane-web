---
import Logo from './Logo.astro';
---

<header role="banner">
  <div class="container align-row">
    <Logo data-animation="pop-up" data-animation-delay="1s" class="logo" />
    <div style="flex-grow: 1;"></div>
    <div class="space-32"><slot name="navigation" /></div>
    <div class="space-4"><slot name="theme" /></div>
    <slot name="auth" />
  </div>
</header>

<style lang="scss" is:inline>
  header {
    height: var(--header-height);
    width: 100%;
    background-color: var(--header-background);
    overflow: hidden;
    position: sticky;
    top: 0;
  }
</style>
