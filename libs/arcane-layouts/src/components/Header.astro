---
import Logo from './Logo.astro';
---

<header role="banner">
  <div class="container align-row">
    <Logo data-animation="pop-up" data-animation-delay="1s" svgId="header-logo"
    />
    <div style="flex-grow: 1;"></div>
    <div class="space-32"><slot name="navigation" /></div>
    <slot name="auth" />
  </div>
</header>

<style lang="scss">
  header {
    height: var(--header-height) !important;
    width: 100%;
    background-color: var(--header-background);
    position: sticky;
    top: 0;
  }

  #header-logo {
    fill: var(--font-color);
  }
</style>
