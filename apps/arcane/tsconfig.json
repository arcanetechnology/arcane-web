{
  "extends": "../../tsconfig.base.json",

  "compilerOptions": {
    "jsxImportSource": "solid-js",
    "moduleResolution": "node",
    "lib": ["esnext", "dom"],
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "preserve",
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types"],
    "types": ["vite/client", "node"],
    "paths": {
      "@components/*": ["src/client/components/*"],
      "@pages/*": ["src/client/pages/*"],
      "@/*": ["src/client/*"]
    }
  },

  "include": [
    "./src/client/**/*.js",
    "./src/client/**/*.ts",
    "src/client/**/*.jsx",
    "./src/client/**/*.tsx",
    "src/client/**/*.d.ts",

    "tests/**/*.js",
    "tests/**/*.ts",
    "tests/**/*.jsx",
    "tests/**/*.tsx"
  ],

  "exclude": [
    "node_modules",
    "typings",
    "public",
    "build",
    "dist",
    "src/server/**/*"
  ]
}
