{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "lib": ["es2021"],
    "outDir": "./dist",
    "module": "Node16",
    "target": "ES2022",
    "moduleResolution": "Node16",
    "paths": {
      "@/*": ["./src/server/*"],
      "@utils/*": ["./src/server/utils/*"]
    }
  },
  "include": [
    "src/server/index.ts",
    "src/server/**/*.js",
    "src/server/**/*.ts",
    "src/server/**/*.jsx",
    "src/server/**/*.tsx",
    "src/server/**/*.d.ts",

    "tests/**/*.js",
    "tests/**/*.ts",
    "tests/**/*.jsx",
    "tests/**/*.tsx"
  ],

  "exclude": [
    "node_modules",
    "typings",
    "public",
    "build",
    "dist",
    "src/client/**/*"
  ]
}
